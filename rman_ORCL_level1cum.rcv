sql 'alter session set NLS_DATE_FORMAT="dd/mm/yyyy hh24:mi:ss" ' ;

show all ;

run
{
  backup incremental level 1 cumulative filesperset 3 database  format '%d_%T_%u_lev1.bkp' tag 'LEV1_CUMULATIVE' ;
  backup spfile                                                 format '%d_%T_%u_spfl.bkp' tag 'SPFILE' ;
  backup current controlfile                                    format '%d_%T_%u_ctrl.bkp' tag 'CTRL' ;
}

